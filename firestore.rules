
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read: if true; // Anyone can read user profiles
      allow create, update, delete: if request.auth.uid == userId; // Only the user can modify their own profile
    }

    match /ads/{adId} {
      allow read: if true; // Anyone can read ads
      allow create: if request.auth.uid == request.resource.data.userId; // User must be owner to create
      allow delete: if request.auth.uid == resource.data.userId; // User must be owner to delete
      allow update: if 
        // The owner of the ad can update any field
        request.auth.uid == resource.data.userId || 
        // Any authenticated user can update ONLY the likes and likedBy fields.
        (
          request.auth != null &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'likedBy'])
        );
    }
  }
}
